---
import { Picture } from "astro:assets";
import profilePic from "@/images/headshot.jpg"
---

<div
    class={`aspect-square size-full flex-none overflow-hidden rounded-full border-accent shadow-[0_20px_50px_rgba(0,0,0,0.5)]`}
>
    <!-- Place holder for pfp -->
    <Picture
        formats={["avif", "webp", "png", "jpg"]}
        inferSize={true}
        src={profilePic}
        title="Profile picture"
        alt="looksmaxing photo"
        class="h-full object-cover object-center"
    />
</div>