---
import { Icon } from "astro-icon/components";

type NavItem = {
    path: string;
    name: string
};

const navItems: NavItem[] = [
    { 
        name: "Home",
        path: "/"
    },
    {
        name: "Experience",
        path: "/experience"
    },
    {
        name: "Projects",
        path: "/projects"
    },
    {
        name: "Blog", 
        path: "/blog"
    },
];
---

<header class="w-full">
    <div
        class="font-sans mx-auto box-content flex h-4 max-w-screen-xl flex-row items-center justify-between p-4"
    >
        <!-- left side of the header -->
        <a href="/" class="font-bold"> peter-phi.com </a>

        <!-- right side of the header -->
        <nav class="text-sm text-gray-700">
            <menu class="flex flex-row gap-4 max-sm:hidden">
                {
                    navItems.map(({ path, name }) => (
                        <li
                            class={
                                Astro.url.pathname === path ? "font-bold" : ""
                            }
                        >
                            <a href={path}>{name}</a>
                        </li>
                    ))
                }
            </menu>
            <details
                id="hamburger"
                class="peer group open:bg-background open:text-primary hidden open:fixed 
                open:top-0 open:right-0 open:bottom-0 open:z-20 open:w-80 open:max-w-dvh open:p-4 
                open:text-base open:shadow-lg max-sm:block"
            >
                <summary class="inline cursor-pointer">
                    <Icon
                        name="fa7-solid:bars"
                        class="inline group-open:hidden"
                        role="button"
                        aria-label="nav menu">
                    </Icon>
                </summary>
                <menu class="mt-8 flex flex-col gap-4">
                    {
                        navItems.map(({ path, name }) => (
                            <li
                                class={
                                    Astro.url.pathname === path ? "font-bold" : ""
                                }
                            >
                                <a href={path}>{name}</a>
                            </li>
                        ))
                    }   
                </menu>
            </details>
            <div
                id="backdrop"
                class="bg-primary fixed inset-0 z-10 hidden opacity-50 peer-open:block"
            >
            </div>
        </nav>
    </div>
</header>

<script>
    const backdrop = document.getElementById(
        "backdrop",
    ) as HTMLDivElement | null;
    const hamburger = document.getElementById(
        "hamburger",
    ) as HTMLDetailsElement | null;

    backdrop?.addEventListener("click", () => {
        if (hamburger) {
            hamburger.open = false;
        }
    });

    hamburger?.addEventListener("toggle", () => {
        if(hamburger.open) {
            document.body.style.overflow = "hidden";
        } else {
            document.body.style.overflow = "auto";
        }
    });
</script>